{
  "name": "ockham",
  "version": "0.1.0",
  "private": true,
  "description": "Ockham Desktop Application",
  "scripts": {
    "dev": "pnpm --filter @ockham/codescan build && pnpm --filter @ockham/shared build && pnpm --filter @ockham/desktop dev",
    "build": "pnpm --filter @ockham/codescan build && pnpm --filter @ockham/shared build && pnpm --filter @ockham/desktop build",
    "build:shared": "pnpm --filter @ockham/codescan build && pnpm --filter @ockham/shared build",
    "release": "bash scripts/release.sh",
    "build:unpack": "pnpm build && pnpm --filter @ockham/desktop exec electron-builder --dir",
    "build:mac": "pnpm build && pnpm --filter @ockham/desktop exec electron-builder --mac",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "eslint": "^9.39.3",
    "globals": "^17.3.0",
    "typescript-eslint": "^8.56.1"
  }
}